@model DoacaoSangue.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Doação de Sangue - Web</title>
    @Styles.Render("~/Content/signin")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="container">
    <h1 class="text-center">Sistema de Doação de Sangue</h1>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class = "form-signin"}))
    {
        @Html.AntiForgeryToken()
        <h2 class="form-signin-heading text-center">Entrar no sistema</h2>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.LabelFor(model => model.EmailUsuario, htmlAttributes: new {@class = "sr-only"})
        @Html.EditorFor(model => model.EmailUsuario, new {htmlAttributes = new {@class = "form-control", autofocus = ""}})
        @Html.ValidationMessageFor(model => model.EmailUsuario, "", new {@class = "text-danger"})
        @Html.LabelFor(model => model.Senha, htmlAttributes: new {@class = "sr-only"})
        @Html.EditorFor(model => model.Senha, new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(model => model.Senha, "", new {@class = "text-danger"})
        <button type="submit" class="btn btn-lg btn-primary btn-block">Entrar</button>
    }
</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
